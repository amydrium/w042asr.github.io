@charset "utf-8";

main{
	padding:2.5%;
}

h1{
	margin-top:0;
}

section {
	display: none;
	padding: 20px 0 0;
	border-top: 1px solid #95FE47;
}

input {
	display: none;
}

label {
	display: inline-block;
	margin: 0 0 -1px;
	padding: 15px 25px;
	text-align: center;
	color: #95FE47;
	border: 1px solid transparent;
}

label:hover {
	color: #95FE47;
	cursor: pointer;
}

input:checked + label {
	color: #95FE47;
	border: 1px solid #95FE47;
	border-top: 2px solid #95FE47;
	border-bottom: 1px solid #282828;
}

#tab1:checked ~ #content1,
#tab2:checked ~ #content2,
#tab3:checked ~ #content3,
#tab4:checked ~ #content4 {
	display: block;
}



#adobe-dc-view{
width:100%;
height:625px;
margin:0;
padding:0;
}

